<% provide(:flow, t("titles.resend_confirmation")) %>

<div class="zyxel_content">
  <div class="text-right" style="">
    <%= link_to("Skip", root_path, class: "zyxel_btn_style2") if current_user && current_user.confirmation_valid? %>
  </div>

  <div> <%= image_tag("setp2.png", class: "step_confirmation") %></div>

  <p><span class="zyxel_span3"><%= t("devise.confirmations.apply_account") %></span></p>

  <p><span class="zyxel_span3"> <%= t("devise.confirmations.finish_step") %> <u><%= current_user.email %></u> <%= t("devise.confirmations.click_step") %></span></p>

  <p><span class="zyxel_span3"> <%= t("devise.confirmations.confirm_before") %> <b><%= confirmation_expire_time_string %></b></span></p>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
    <table class="zyxel_table_style">
      <tr>
        <td><%= f.hidden_field :email, value: current_user.email, class: "input_style1 td_field" %></td>
      </tr>
    </table>
    <div class="zyxel_btn_area i18n_fix">
      <div style="float: left; width: 100px; padding: 11px 0 13px 0">
        <%= link_to t("devise.confirmations.change_account"), users_confirmation_edit_path %>
      </div>
      <div style="float: right">
        <%= f.submit t("devise.confirmations.resend"), class: "zyxel_btn_submit zyxel_btn_confirm" %>
      </div>
    </div>
  <% end %>

</div>
