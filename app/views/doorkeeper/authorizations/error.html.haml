- content_for :title, I18n.t('doorkeeper.authorizations.error.title')

.content_wrapper.normal
  .inner_title
    %h4
      = fa_icon('exclamation-circle')
      = I18n.t('doorkeeper.authorizations.error.title')
  %p
    = @pre_auth.error_response.body[:error_description]

  .spacer{ :style => "height: 200px;" }

  = link_to I18n.t('doorkeeper.authorizations.buttons.back_to_your_application'), @pre_auth.redirect_uri, class: "btn btn-custom btn-block"